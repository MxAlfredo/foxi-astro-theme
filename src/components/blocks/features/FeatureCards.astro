---
// Feature Cards grid Section
// ------------
// Description: A grid of cards with feature information in a 4 column layout.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Card from '../../ui/cards/FeatureCard.astro'

// Content
// - Cards
import feature01 from '../../../assets/cards/remodelacion-imagen.jpg'
import feature03 from '../../../assets/cards/financiamiento-imagen.jpg'
---

<Section id="features" padding="both" classes="py-12 lg:py-16">
	<Row>
		<Col span="12" align="center" classes="mb-6 max-w-3xl mx-auto">
			<h2 class="text-pretty text-2xl lg:text-3xl">Servicios que <strong>transforman</strong> espacios</h2>
			<p class="pb-0 text-sm lg:text-base text-neutral-600 dark:text-neutral-400">
				Remodelación integral con financiamiento directo. Calidad, diseño y facilidades de pago.
			</p>
		</Col>
	</Row>
	<Row>
		<Col span="6">
			<Card
				title="Remodelación Integral"
				subtitle="Cocinas, baños y espacios completos con diseño personalizado y acabados premium."
				image={feature01}
				link="/servicios"
			/>
		</Col>
		<Col span="6">
			<Card
				title="Financiamiento 7.9%"
				subtitle="Sin bancos, tasa fija, pagos hasta 60 meses. Aprobación en 48 horas."
				image={feature03}
				link="/financiamiento"
			/>
		</Col>
	</Row>
</Section>
