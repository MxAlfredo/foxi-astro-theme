---
// Feature Cards grid Section
// ------------
// Description: A grid of cards with feature information in a 4 column layout.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Card from '../../ui/cards/FeatureCard.astro'

// Content
// - Cards
import feature01 from '../../../assets/cards/feature-01.svg'
import feature02 from '../../../assets/cards/feature-02.svg'
import feature03 from '../../../assets/cards/feature-03.svg'
import feature04 from '../../../assets/cards/feature-04.svg'
import feature05 from '../../../assets/cards/feature-05.svg'
---

<Section id="features">
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-pretty">Servicios integrales para <strong>transformar</strong> tu espacio</h2>
			<p class="pb-0 text-lg">
				Desde remodelación residencial y comercial hasta financiamiento directo. Cada servicio está diseñado
				para ofrecerte la mejor experiencia con calidad y flexibilidad financiera.
			</p>
		</Col>
	</Row>
	<Row>
		<Col span="4">
			<Card
				title="Remodelación Residencial"
				subtitle="Transformamos tu hogar con diseño personalizado: cocinas, baños, recámaras y espacios únicos con estilo y funcionalidad."
				image={feature01}
				link="/servicios"
			/>
		</Col>
		<Col span="4" classes="flex flex-col gap-6">
			<Card
				title="Remodelación Comercial"
				subtitle="Espacios comerciales y oficinas diseñados para optimizar productividad y crear experiencias únicas."
				image={feature02}
				link="/servicios"
			/>
			<Card
				title="Financiamiento Directo"
				subtitle="Tasa fija 7.9% anual, pagos hasta 60 meses. Sin bancos, aprobación en 48 horas."
				image={feature03}
				link="/financiamiento"
			/>
		</Col>
		<Col span="4" classes="flex flex-col gap-6">
			<Card
				title="Diseño de Interiores"
				subtitle="Diseño personalizado moderno, minimalista e industrial que refleja tu personalidad y estilo."
				image={feature04}
				link="/servicios"
			/>
			<Card
				title="Asesoría Integral"
				subtitle="Te acompañamos desde el diseño inicial hasta la entrega final. Experiencia y compromiso garantizado."
				image={feature05}
				link="/nosotros"
			/>
		</Col>
	</Row>
</Section>
