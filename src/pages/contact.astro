---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'

// Content
// - SEO
const SEO = {
	title: 'CREYPASS | Contacto - Remodelación y Financiamiento',
	description:
		'Contáctanos para consultas sobre remodelación de interiores y financiamiento directo. Nuestro equipo está listo para ayudarte con tu proyecto.'
}
// - Page Header
const header = {
	title: 'Ponte en contacto con <strong>CREYPASS</strong>',
	text: "¿Tienes un proyecto de remodelación en mente? Contáctanos para una consulta gratuita y conoce nuestras opciones de financiamiento directo."
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards classes="dark:bg-neutral-950/80" />
	<SocialProof classes="dark:bg-neutral-950/80" />
</Layout>
