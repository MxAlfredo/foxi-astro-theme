---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Feature from '../components/blocks/features/FeatureSticky.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Data
import featuresData from '../data/json-files/creypassFeaturesData.json'
// - Feature Categories
const featuresResidencial = featuresData.filter((feature) => feature.category === 'Residencial')
const featuresComercial = featuresData.filter((feature) => feature.category === 'Comercial')
const featuresFinanciamiento = featuresData.filter((feature) => feature.category === 'Financiamiento')
const featuresServicio = featuresData.filter((feature) => feature.category === 'Servicio')

// Content
// - SEO
const SEO = {
	title: 'CREYPASS | Características y Servicios de Remodelación',
	description:
		"Descubre las características distintivas de CREYPASS: servicios de remodelación residencial y comercial con financiamiento directo. Conoce por qué somos la mejor opción para tu proyecto."
}
// - Page Header
const header = {
	title: 'Por qué elegir <strong>CREYPASS</strong> para tu proyecto.',
	text: 'Servicios integrales de remodelación con financiamiento directo y garantía de calidad.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Feature
		title="Remodelación Residencial"
		text="Servicios completos para transformar tu hogar con los más altos estándares de calidad."
		data={featuresResidencial}
	/>
	<Feature
		title="Proyectos Comerciales"
		text="Especialistas en remodelación de espacios comerciales con diseño funcional y profesional."
		data={featuresComercial}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="Financiamiento Directo"
		text="Opciones de financiamiento flexible con tasas preferenciales y aprobación rápida."
		data={featuresFinanciamiento}
	/>
	<Feature
		title="Servicio Integral"
		text="Acompañamiento completo desde el diseño hasta la entrega final de tu proyecto."
		data={featuresServicio}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
</Layout>
