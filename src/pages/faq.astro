---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/CreypassFAQ.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Content
// - SEO
const SEO = {
	title: 'CREYPASS | Preguntas Frecuentes sobre Remodelación y Financiamiento',
	description:
		"Resuelve tus dudas sobre los servicios de remodelación y financiamiento de CREYPASS. Encuentra respuestas sobre nuestros procesos, garantías y condiciones."
}
// - Page Header
const header = {
	title: 'Preguntas <strong>frecuentes</strong> sobre CREYPASS',
	text: 'Encuentra respuestas a las dudas más comunes sobre nuestros servicios de remodelación y financiamiento.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<FAQ />
	<CTA />
</Layout>
