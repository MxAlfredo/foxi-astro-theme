---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/HomeCTA.astro'
import Features from '../components/blocks/features/FeatureCardsSimple.astro'
import Testimonial from '../components/blocks/testimonials/BasicDark.astro'
import HighlightBlocks from '../components/blocks/highlights/HighlightsSimple.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'

// Content
// - Testimonial background
import testimonialBackground from '../assets/testimonial-bg-02.webp'
// - Testimonial data
const testimonialData = {
	blockquote: 'La remodelación de nuestra cocina con CREYPASS superó todas nuestras expectativas. El financiamiento directo nos permitió tener la cocina de nuestros sueños sin comprometer nuestros ahorros.',
	figcaption: 'Carmen y Roberto Hernández',
	cite: 'Remodelación integral, Colonia Roma Norte'
}
// - SEO
const SEO = {
	title: 'CREYPASS | Remodelación y Financiamiento de Interiores',
	description:
		'Transformamos espacios residenciales y comerciales con financiamiento directo. Tasa fija 7.9% anual, pagos hasta 60 meses. Diseño, calidad y flexibilidad financiera.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero />
	<Features />
	<Testimonial 
		blockquote={testimonialData.blockquote}
		figcaption={testimonialData.figcaption}
		cite={testimonialData.cite}
		bg={testimonialBackground} 
		bgPosition="right" 
	/>
	<HighlightBlocks />
</Layout>
